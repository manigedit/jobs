<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <LinearLayout
       android:layout_marginTop="20dp"
       android:id="@+id/topbar"
       android:layout_alignParentTop="true"
       android:layout_margin="10dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:weightSum="1"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="0dp"
           android:layout_margin="5dp"
           android:layout_weight="0.15"
           android:layout_gravity="center"
           android:src="@drawable/logorr"
           android:layout_height="45dp" />
       <TextView
           android:layout_width="0dp"
           android:layout_weight="0.70"
           android:layout_height="35dp"
           android:textSize="20dp"
           android:fontFamily="monospace"
           android:layout_margin="5dp"
           android:gravity="center_vertical"
           android:textStyle="bold"
           android:textColor="@android:color/background_light"
           android:text="Nodejs Jobs"/>
       <ImageView
           android:id="@+id/menu_button"
           android:padding="5dp"
           android:layout_width="0dp"
           android:layout_gravity="center"
           android:src="@drawable/menu_icon"
           android:layout_weight="0.15"
           android:layout_height="35dp" />
   </LinearLayout>

    <TextView
        android:id="@+id/tv_middle"
        android:layout_below="@id/topbar"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="1500+ jobs posted last week"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/middle_layout"
        android:background="@drawable/sub_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@id/tv_middle"
        android:layout_height="wrap_content">
        <EditText
            android:text=""
            android:background="@android:color/background_light"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:id="@+id/area_spinner"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/background_light"
            android:layout_marginBottom="20dp"
            android:layout_height="30dp"></Spinner>

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/background_light"
            android:layout_height="30dp"></Spinner>

        <Button
            android:id="@+id/search_btn"
            android:layout_width="fill_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="16dp"
            android:text="Search"
            android:textColor="#ffffff"
            android:background="#29C9E9"
            android:gravity="center"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/middle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by tags"/>
    </RelativeLayout>


</ScrollView>